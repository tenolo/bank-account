{
    "name": "tenolo/bank-account",
    "description": "Bank account utility library (e.g. IBAN)",
    "keywords": [
        "bank",
        "account",
        "IBAN"
    ],
    "type": "library",
    "homepage": "https://tenolo.de",
    "authors": [
        {
            "name": "tenolo - Robert Bernis, Johannes Herberhold GbR",
            "email": "info@tenolo.de",
            "homepage": "http://tenolo.de"
        },
        {
            "name": "Christopher Christen",
            "email": "c.christen@tenolo.de"
        },
        {
            "name": "Nikita Loges",
            "email": "n.loges@tenolo.de"
        }
    ],
    "require": {
        "php": "~5.3|~7.0",

        "globalcitizen/php-iban": "~2.6"
    },
    "require-dev": {
        "twig/twig": "~1.34|~2.0",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Tenolo\\BankAccount\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tenolo\\BankAccount\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
